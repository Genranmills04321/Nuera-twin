
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // System templates are read-only for everyone
    match /templates/{templateId} {
      allow read: if isSignedIn();
      allow write: if false; 
    }

    match /users/{userId} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }
    
    match /projects/{projectId} {
      allow read, write, delete: if isSignedIn() && (isOwner(resource.data.uid) || isOwner(request.resource.data.uid));
    }
    
    match /generations/{genId} {
      allow read, delete: if isSignedIn() && isOwner(resource.data.uid);
      allow create: if isSignedIn() && isOwner(request.resource.data.uid);
    }
  }
}
